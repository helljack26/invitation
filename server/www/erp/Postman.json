{
    "info": {
        "name": "ERP API Collection",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Register",
            "request": {
                "method": "POST",
                "header": [
                    { "key": "Content-Type", "value": "application/json" }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\"username\": \"testuser\", \"email\": \"test@example.com\", \"password\": \"yourpassword\", \"first_name\": \"Test\", \"second_name\": \"User\", \"last_name\": \"Example\"}"
                },
                "url": {
                    "raw": "http://localhost/api/auth/register",
                    "protocol": "http",
                    "host": ["localhost"],
                    "path": ["api", "auth", "register"]
                }
            }
        },
        {
            "name": "Create Company",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/x-www-form-urlencoded"
                    },
                    { "key": "Authorization", "value": "Bearer {{token}}" }
                ],
                "body": {
                    "mode": "urlencoded",
                    "urlencoded": [
                        {
                            "key": "company_name",
                            "value": "Название Компании",
                            "type": "text"
                        },
                        {
                            "key": "address",
                            "value": "Адрес Компании",
                            "type": "text"
                        }
                    ]
                },
                "url": {
                    "raw": "http://localhost/api/company/create",
                    "protocol": "http",
                    "host": ["localhost"],
                    "path": ["api", "company", "create"]
                }
            }
        },
        {
